---
interface PaginateProps {
  lastPage: number;
  currentPage: number;
}

const { currentPage, lastPage } = Astro.props as PaginateProps;

const prev = currentPage > 1 ? "" : "disabled";
const next = currentPage == lastPage ? "disabled" : "";
---

<nav>
  <a class={prev} href={`/posts${currentPage - 1 !== 1 ? "/" + (currentPage - 1) : ""}`}>
    <svg xmlns="http://www.w3.org/2000/svg" class={`${prev}-svg`}>
      <path
        d="M12.707 17.293 8.414 13H18v-2H8.414l4.293-4.293-1.414-1.414L4.586 12l6.707 6.707z"
      ></path>
    </svg>Prev</a
  >
  <a class={next} href={`/posts/${currentPage + 1}`}
    >Next <svg xmlns="http://www.w3.org/2000/svg" class={`${next}-svg`}>
      <path
        d="m11.293 17.293 1.414 1.414L19.414 12l-6.707-6.707-1.414 1.414L15.586 11H6v2h9.586z"
      ></path>
    </svg></a
  >
</nav>

<style>
  .disabled {
    pointer-events: none;
    user-select: none;
    opacity: 0.5;
  }
</style>